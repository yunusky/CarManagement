@model List<BlogListDto>
@{
    int count = 0;
}
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Son 5 Blog</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Güncel son 5 blog listesi
            </p>

            <div class="table-responsive">
                <table class="table table-bordered table-hover table-centered table-nowrap mb-0">
                    <tr>
                        <th>#</th>
                        <th>Blog Başlığı</th>
                        <th>Yazar</th>
                        <th>Tarih</th>
                        <th>Bloğu Aç</th>
                    </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                            if (count<=5)
                            {
                                <tr>
                                    <td>
                                        <h5 class="font-size-15 mb-1 font-weight-normal">
                                            @count
                                        </h5>
                                    </td>
                                    <td>
                                        <h5 class="font-size-15 mb-1 font-weight-normal">@item.Title</h5>

                                    </td>
                                    <td>
                                        <h5 class="font-size-17 mb-1 font-weight-normal">@item.AuthorName</h5>

                                    </td>
                                    <td>
                                        <h5 class="font-size-17 mb-1 font-weight-normal">@item.CreatedDate.ToString("dd MMM yy")</h5>

                                    </td>
                                    <td>
                                        <h5 class="font-size-15 mb-1 font-weight-normal">
                                            <a class="text-warning" href="/Blog/BlogDetail/@item.BlogId"><i class="fas fa-paper-plane"></i></a>
                                        </h5>
                                    </td>
                                </tr>
                            }
                          
                        }
                      
                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div> <!-- end col -->