@model SocialMediaUpdateDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Admin/SocialMedia/Index">Sosyal Medyalar</a></li>
                    <li class="breadcrumb-item active">Sosyal Medya Güncelle</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-8">
        <div class="SocialMediad">
            <div class="SocialMediad-body">

                <h4 class="SocialMediad-title">Sosyal Medya Güncelle</h4>
                <p class="SocialMediad-subtitle mb-4">Sosyal Medya ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                <form method="post">
                    <div class="row">
                        <input type="hidden" asp-for="SocialMediaId" />
                        <div class="col col-md-4">
                            <div class="form-group">
                                <label>Sosyal Medya Adı</label>
                                <input type="text" class="form-control" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label>İkon</label>
                                <input type="text" class="form-control" asp-for="Icon">
                                <span class="text-danger" asp-validation-for="Icon"></span>
                            </div>
                            <div class="form-group">
                                <label>Url</label>
                                <input type="text" class="form-control" asp-for="Url">
                                <span class="text-danger" asp-validation-for="Url"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning waves-effect waves-light"><i class="mdi mdi-update"></i> Güncelle</button>
                </form>
            </div> <!-- end SocialMediad-body-->
        </div> <!-- end SocialMediad-->
    </div> <!-- end col -->
</div>
<!-- end row-->
