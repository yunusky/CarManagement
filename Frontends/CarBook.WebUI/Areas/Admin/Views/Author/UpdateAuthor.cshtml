@model AuthorUpdateDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Admin/Author/Index">Yazarlar</a></li>
                    <li class="breadcrumb-item active">Yazar Güncelle</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-8">
        <div class="card">
            <div class="card-body">

                <h4 class="Authord-title">Yazar Güncelle</h4>
                <p class="Authord-subtitle mb-4">Yazar ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                <form method="post">
                    <div class="row">
                        <input type="hidden" asp-for="AuthorId" />
                        <div class="col col-md-4">
                            <div class="form-group">
                                <label>Adı</label>
                                <input type="text" class="form-control" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label>Soyadı</label>
                                <input type="text" class="form-control" asp-for="Surname">
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>
                        </div>
                        <div class="col col-md-4">
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label>Görsel</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                                <span class="text-danger" asp-validation-for="ImageUrl"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning waves-effect waves-light"><i class="mdi mdi-update"></i> Güncelle</button>
                </form>
            </div> <!-- end Authord-body-->
        </div> <!-- end Authord-->
    </div> <!-- end col -->
</div>
<!-- end row-->
