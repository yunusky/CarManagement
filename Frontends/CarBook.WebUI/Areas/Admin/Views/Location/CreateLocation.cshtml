@model LocationCreateDto
@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Admin/Location/Index">Lokasyonlar</a></li>
                    <li class="breadcrumb-item active">Yeni Lokasyon Girişi</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-8">
        <div class="card">
            <div class="card-body">
                <h4 class="Locationd-title">Yeni Lokasyon Girişi</h4>
                <p class="Locationd-subtitle mb-4">Lokasyon ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                <form method="post">
                    <div class="row">
                        <div class="col col-md-4">
                            <div class="form-group">
                                <label>Lokasyon Adı</label>
                                <input type="text" class="form-control" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light"><i class="mdi mdi-content-save-all"></i> Kaydet</button>
                </form>
            </div> <!-- end Locationd-body-->
        </div> <!-- end Locationd-->
    </div> <!-- end col -->
</div>
<!-- end row-->
