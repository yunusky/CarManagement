@model TestimonialUpdateDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Admin/Testimonial/Index">Referanslar</a></li>
                    <li class="breadcrumb-item active">Referans Güncelle</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-8">
        <div class="Testimoniald">
            <div class="Testimoniald-body">

                <h4 class="Testimoniald-title">Referans Güncelle</h4>
                <p class="Testimoniald-subtitle mb-4">Referans ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                <form method="post">
                    <div class="row">
                        <input type="hidden" asp-for="TestimonialId" />
                        <div class="col col-md-4">
                            <div class="form-group">
                                <label>Ad</label>
                                <input type="text" class="form-control" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label>Soyad</label>
                                <input type="text" class="form-control" asp-for="Surname">
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>
                        </div>
                        <div class="col col-md-4">
                            <div class="form-group">
                                <label>Görsel</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                                <span class="text-danger" asp-validation-for="ImageUrl"></span>
                            </div>
                            <div class="form-group">
                                <label>Başlık</label>
                                <input type="text" class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md-8">
                        <textarea rows="10" class="form-control" asp-for="Text"></textarea>
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-warning waves-effect waves-light"><i class="mdi mdi-update"></i> Güncelle</button>
                </form>
            </div> <!-- end Testimoniald-body-->
        </div> <!-- end Testimoniald-->
    </div> <!-- end col -->
</div>
<!-- end row-->
