@model List<CarFeatureListByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard/Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Özellikler</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h4 class="CarFeatured-title">Özellik Listesi</h4>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <a href="/Admin/CarFeature/CreateCarFeature" class="btn btn-primary btn-rounded waves-effect waves-light">
                        <i class="mdi mdi-gamepad-round"></i>  Yeni Özellik Girişi
                    </a>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <p class="CarFeatured-subtitle mb-4">
                        Özelliklerla ilgili ekleme, silme, güncelleme, arama ve listeleme gibi işlemleri bu sayfa güzerinden gerçekleştirebilirsiniz.
                    </p>
                </div>

            </div>
            <div class="table-responsive">
                @{
                    if (Model.Count == 0)
                    {
                        <div class="alert alert-secondary" role="alert">
                            Araca ait herhangi bir özellik bulunamadı.
                        </div>
                    }
                    else
                    {
                        <form method="post">
                        @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].carFeatureId" />
                                <input type="hidden" asp-for="@Model[i].carId" />
                                <input type="hidden" asp-for="@Model[i].featureId" />
                                <input type="checkbox" asp-for="@Model[i].available" class="form-check-input" />
                                <label class="form-check-label" for="@Model[i].available">@Model[i].featureName</label>
                                </div>
                            }
                            <br />
                            <button class="btn btn-warning waves-effect waves-light"><i class="mdi mdi-update"></i> Güncelle</button>
                        </form>
                    }
                }
            </div>
        </div>
        <!-- end CarFeatured-body-->
    </div>
    <!-- end CarFeatured -->
</div>
