@model BannerUpdateDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard/Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Banner Güncelle</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-8">
        <div class="card">
            <div class="card-body">

                <h4 class="Bannerd-title">Banner Güncelle</h4>
                <p class="Bannerd-subtitle mb-4">Banner ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                <form method="post">
                    <div class="row">
                        <input type="hidden" asp-for="BannerId" />
                        <div class="col col-md-4">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input type="text" class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <div class="col col-md-4">
                            <div class="form-group">
                                <label>Video Açıklama</label>
                                <input type="text" class="form-control" asp-for="VideoDescription">
                                <span class="text-danger" asp-validation-for="VideoDescription"></span>
                            </div>
                            <div class="form-group">
                                <label>Video Url</label>
                                <input type="text" class="form-control" asp-for="VideoUrl">
                                <span class="text-danger" asp-validation-for="VideoUrl"></span>
                            </div>
                        </div>
                        <div class="col col-md-4">
                            <div class="form-group">
                                <label>Görsel</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                                <span class="text-danger" asp-validation-for="ImageUrl"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning waves-effect waves-light"><i class="mdi mdi-update"></i> Güncelle</button>
                </form>
            </div> <!-- end Bannerd-body-->
        </div> <!-- end Bannerd-->
    </div> <!-- end col -->
</div>
<!-- end row-->
