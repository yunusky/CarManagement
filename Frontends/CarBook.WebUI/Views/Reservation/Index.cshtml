@model ReservationCreateDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url(/carbook-master/images/bg_3.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Default/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Rezervasyon <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Araç Rezervasyon Formu</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">        
            <div class="col-md-12 block-9 mb-md-5">
                <form method="post" class="bg-light p-5 contact-form">
                    <input type="hidden" asp-for="CarId" />
                    <div style="text-align:center" class="form-group">
                        <h3 class="form-label">Kiralamak İstediğiniz Araba</h3>
                      <br />
                      <img height="300" width="480" src="@ViewBag.carImage" />
                      <br />
                      <h5>@ViewBag.car</h5>

                    </div>
                    <div class="form-group">
                        <label class="form-label">Ad</label>
                        <input type="text" asp-for="Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Soyad</label>
                        <input type="text" asp-for="Surname" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Yaş</label>
                        <input type="number" asp-for=Age class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Ehliyet Yılınız</label>
                        <input type="number" asp-for=DriverLicenseYear class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">E-posta</label>
                        <input type="email" asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Telefon</label>
                        <input type="text" asp-for="Phone" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Almak İstediğiniz Lokasyon</label>
                        <select class="form-control" asp-for="PickUpLocationId" asp-items="@ViewBag.pickUpLocation"></select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Almak İstediğiniz Lokasyon</label>
                        <select class="form-control" asp-for="DropOffLocationId" asp-items="@ViewBag.dropOffLocation"></select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Ek Bilgi (Zorunlu Değil)</label>
                        <textarea cols="30" rows="7" asp-for="Description" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <span><input type="checkbox" required /> <a href="">Kullanım koşulları</a> ve <a href="">Gizlilik Politikaları</a>nı okudum, anladım ve onaylıyorum.</span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

