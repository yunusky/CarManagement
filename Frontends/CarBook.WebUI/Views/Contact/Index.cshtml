@model ContactCreateDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/carbook-master/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Default/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>İletişim <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">İletişime Geçin</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            @await Component.InvokeAsync("_DefaultContactAddressComponentPartial")
            <div class="col-md-7 block-9 mb-md-5">
                <form method="post" class="bg-light p-5 contact-form">
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" asp-for=Name placeholder="Ad">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" asp-for=Surname placeholder="Soyad">
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" asp-for=Phone placeholder="Telefon">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <input type="email" class="form-control" asp-for=Email placeholder="E-posta">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" asp-for=Subject placeholder="Konu">
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="col">
                                @Html.DropDownListFor(x => x.ContactCategoryId, (List<SelectListItem>)ViewBag.categoryList, new { @class = "form-control" })
                            </div>

                        </div>
                       
                    </div>
                    <div class="form-group">
                        <textarea cols="30" rows="7" class="form-control" asp-for=Text placeholder="Mesaj"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div id="map" class="bg-white"></div>
            </div>
        </div>
    </div>
</section>

