@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url(/carbook-master/images/bg_3.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Default/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2"><a href="/Blog/Index">Bloglar <i class="ion-ios-arrow-forward"></i></a></span> <span>Blog Detay <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Blogu Oku</h1>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ftco-animate">
                @await Component.InvokeAsync("_DefaultBlogDetailComponentPartial", new { id = ViewBag.id })
                @await Component.InvokeAsync("_DefaultBlogDetailTagComponentPartial", new { id = ViewBag.id })
    
                @await Component.InvokeAsync("_DefaultBlogDetailAuthorComponentPartial", new { id = ViewBag.id })

                @await Component.InvokeAsync("_DefaultBlogDetailCommentComponentPartial", new { id = ViewBag.id })

                @await Component.InvokeAsync("_DefaultBlogDetailMakeCommentComponentPartial", new { id = ViewBag.id , model = new CommentCreateDto() })
           
            </div> <!-- .col-md-8 -->
            @await Component.InvokeAsync("_DefaultBlogDetailSideBarComponentPartial")

        </div>
    </div>
</section> <!-- .section -->

