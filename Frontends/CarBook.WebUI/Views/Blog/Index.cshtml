@model List<BlogListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url(/carbook-master/images/bg_3.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Default/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Blog <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Bloglarımız</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">

            @foreach (var item in Model)
            {
                <div class="col-md-12 text-center d-flex ftco-animate">
                    <div class="blog-entry justify-content-end mb-md-5">
                        <a href="" class="block-20 img" style="background-image: url(@item.CoverImageUrl);">
                        </a>
                        <div class="text px-md-5 pt-4">
                            <div class="meta mb-3">
                                <div><a href="#">@item.CreatedDate.ToString("dd MMM yyy")</a></div>
                                <div><a title="Yazara ait bloglar için" href="/Blog/BlogListForAuthor/@item.AuthorId">@item.AuthorName</a></div>
                                <div><a href="." class="meta-chat"><span class="icon-chat"></span> @item.CommentCount</a></div>
                            </div>
                            <h3 class="heading mt-2"><a href="#">@item.Title</a></h3>
                            <p>
                                @{
                                    if (item.Text?.Length > 180)
                                    {
                                        @item.Text.Substring(0, 180)
                                        ;
                                    }
                                    else
                                    {
                                        @item.Text?.ToString()
                                        ;
                                    }
                                }...
                            </p>
                            <p><a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-primary">Bloga Git <span class="icon-long-arrow-right"></span></a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

