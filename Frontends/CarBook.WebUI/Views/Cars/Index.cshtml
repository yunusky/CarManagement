@model List<CarListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url(/carbook-master/images/bg_3.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Default/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Araçlar <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Aracınızı Seçin</h1>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@item.CoverImageUrl);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="#">@item.Model</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@item.BrandName</span>
                                <p class="price ml-auto">@item.PricingAmount <span>/Günlük</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block"><a href="/Reservation/Index/@item.CarId" class="btn btn-primary py-2 mr-1">Kirala</a> <a href="/Cars/CarDetail/@item.CarId" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>