@model List<ReviewListDto>
<div class="row">
    <div class="col-md-7">
        <h3 class="head">@Model.Count Yorum</h3>
        @foreach (var item in Model)
        {
            <div class="review d-flex">
                <div class="user-img" style="background-image: url(@item.imageUrl)"></div>
                <div class="desc">
                    <h4>
                        <span class="text-left">@item.name @item.surname</span>
                        <span class="text-right">@item.createdDate.ToString("dd MMM yyy")</span>
                    </h4>
                    <p class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                        </span>
                        <span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
                    </p>
                    <p>@item.text</p>
                </div>
            </div>
        }
    </div>
    <div class="col-md-5">
        <div class="rating-wrap">
            <h3 class="head">Değerlendirme Sonuçları</h3>
            <div class="wrap">
                <p class="star">
                    <span>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        (98%)
                    </span>
                    <span>20 Yorum</span>
                </p>
                <p class="star">
                    <span>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        (85%)
                    </span>
                    <span>10 Yorum</span>
                </p>
                <p class="star">
                    <span>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        (70%)
                    </span>
                    <span>5 Yorum</span>
                </p>
                <p class="star">
                    <span>
                        <i class="ion-ios-star"></i>
                        <i class="ion-ios-star"></i>
                        (10%)
                    </span>
                    <span>0 Yorum</span>
                </p>
                <p class="star">
                    <span>
                        <i class="ion-ios-star"></i>
                        (0%)
                    </span>
                    <span>0 Yorum</span>
                </p>
            </div>
        </div>
    </div>
</div>