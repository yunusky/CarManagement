@model CommentCreateDto
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Yap</h3>
    <form method="post" asp-action="Index" asp-controller="Comment" class="p-5 bg-light">
        <div class="form-group">
            <div class="row">
                <input type="hidden" asp-for="BlogId" />
                <div class="col">
                    <label for="name">Ad *</label>
                    <input asp-for=Name type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="col">
                    <label for="name">Soyad *</label>
                    <input asp-for=Surname type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col">
                    <label for="email">Email *</label>
                    <input asp-for=Email type="email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="message">Yorum</label>
            <textarea asp-for=Text cols="30" rows="10" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Text"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Gönder" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>