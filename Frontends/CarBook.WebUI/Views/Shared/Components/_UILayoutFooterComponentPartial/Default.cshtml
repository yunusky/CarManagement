@model List<FooterAddressListDto>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    $(document).ready(function () {
        $('#btn1').click(function () {
            swal("Şartlar & Koşullar", "Araba kiralama sürecine dair tüm hizmet koşullarına rezervasyonun fiziki olarak gerçekleştirileceği ofislerimizde yer alan anlaşma dokümanlarından ulaşabilirsiniz. Bütün sürecin hasar, ceza, geçişler (hgs, ogs vs.) ile ilgili detaylar yer almaktadır. Keyifli yolculuklar dileriz.");
        });

        $('#btn2').click(function () {
            swal("Güvenlik", "CarBook web sitemiz AspNet Core teknolojisinde Sha256 şifreleme tekniğiyle verilerin tamamen şifreli olarak tutulması alt yapısına sahiptir. Sistemimizde JWT doğrulaması yapılmaktadır. Kullanıcılarımızın ödeme yaptıkları kart bilgileri sistemde kesinlikle saklanmamaktadır. TC. Kimlik Numarası, Mail Adresi ve telefon gibi bilgileri ise şifrelenerek tutulmaktadır.");
        });

        $('#btn3').click(function () {
            swal("Çerez Politikası", "Sizlere daha iyi hizmet sunabilmek adına tarayıcı çerezlerini kullanmaktayız.");
        });

        $('#btn4').click(function () {
            swal("Sıkça Sorulan Sorular", "Sistem ile ilgili sık sorulan sorular yer alır.");
        });

        $('#btn5').click(function () {
            swal("Ödeme Yöntemleri", "Ödeme işlemleri yalnızca fiziki lokasyonlarımızdaki kiralama noktalarında kart ile yapılmaktadır.");
        });

        $('#btn6').click(function () {
            swal("Nasıl Çalışır", "1.Adım Aracınızını Kiralayın \n 2.Adım Mailiniz Kontrol Edin. \n 3.Adım Ofisimize gelin.");
        });
    });
</script>


<footer class="ftco-footer ftco-bg-dark ftco-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>book</span></a></h2>
                    <p>@ViewBag.description</p>
                    @await Component.InvokeAsync("_UILayoutFooterSocialMediaComponentPartial")
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4 ml-md-5">
                    <h2 class="ftco-heading-2">Hızlı Linkler</h2>
                    <ul class="list-unstyled">
                        <li><a href="/About/Index" class="py-2 d-block">Hakkımızda</a></li>
                        <li><a href="/Service/Index" class="py-2 d-block">Hizmetler</a></li>
                        <li><a href="javascript:void(0)" id="btn1" class="py-2 d-block">Şartlar & Koşullar</a></li>
                        <li><a href="javascript:void(0)" id="btn2" class="py-2 d-block">Güvenlik</a></li>
                        <li><a href="javascript:void(0)" id="btn3" class="py-2 d-block">Çerez Politikası</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Müşteri Desteği</h2>
                    <ul class="list-unstyled">
                        <li><a href="javascript:void(0)" id="btn4" class="py-2 d-block">Sıkça Sorulanlar</a></li>
                        <li><a href="javascript:void(0)" id="btn5" class="py-2 d-block">Ödeme Yöntemleri</a></li>
                        <li><a href="/CarPricing/Index" class="py-2 d-block">Kiralama</a></li>
                        <li><a href="javascript:void(0)" id="btn6" class="py-2 d-block">Nasıl Çalışır</a></li>
                        <li><a href="/Contact/Index/" class="py-2 d-block">Bize Yazın</a></li>                       
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Bir sorunuz mu var?</h2>
                    <div class="block-23 mb-3">
                        <ul>
                            @foreach (var item in Model)

                            {
                                <li><span class="icon icon-map-marker"></span> <span class="text"> @item.Address</span></li>
                                <li><a href="tel:+@item.Phone"><span class="icon icon-phone"></span> <span class="text">+ @item.Phone</span></a></li>
                                <li><a href="mailto:@item.Email"><span class="icon icon-envelope"></span> <span class="text"> @item.Email</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">

            
            </div>
        </div>
    </div>
</footer>

